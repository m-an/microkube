version: '3.6'

services:
  gateway:
    image: quay.io/datawire/ambassador:0.50.0-rc3
    depends_on:
      - barong
    volumes:
      - ../config/gateway:/ambassador/ambassador-config/:ro
    ports:
      - '8081:80'
      - '8877:8877'
    labels:
      traefik.enable: true
      traefik.frontend.rule: "PathPrefix:/api/, /admin, /assets/;Host:www.<%= @config['app']['domain'] %>"
      traefik.port: 80
